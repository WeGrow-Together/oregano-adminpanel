<form action="/api/providers/create" method="POST" id="add_provider">
    <div class="card-body ">
        <div class="form-group">
            <div class="filter ">
                <a href="/provider">
                    <i class="fas fa-angle-double-left "></i>All providers</a>
            </div>
            <br>
            <div class="form-title text-center ">
                <h2 class="text-dark ">New provider</h2>
                <span class="text-dark ">Use the below form to create a new account for provider</span>
            </div>
            <label for="Email ">Email address</label>
            <input type="email" name="email" value="" class="form-control " id="exampleInputEmail1 " placeholder=" example@gmail.com ">
        </div>
        <div class="form-group">
            <label for="name ">Name</label>
            <input type="text " name="name" value="" class="form-control " id="name" placeholder="Name ">
        </div>
        <div class="form-group">
            <label for="date ">Joined On</label>
            <input type="date" name="date" value="" class="form-control " id="date">
        </div>
        <div class="form-group">
            <label for="mobile ">Mobile On</label>
            <input type="number" name="mobile" value="" class="form-control " id="mobile" placeholder="Mobile Number">
        </div>
        <div class="form-group">
            <label for="rating ">Ratings</label>
            <input type="number" name="rating" value="" class="form-control " id="rating" placeholder="Ratings">
        </div>
        <div class="form-group">
            <label for="wallet ">Wallet amount</label>
            <input type="number" name="amount" value="" class="form-control " id="amount" placeholder="Wallet Amount">
        </div>


        <div class="form-group">
            <label for="status">Status</label>
            <div class="radio inline">
                <input type="radio" name="status" value="Active" id="radio-4">
                <label for="radio-4">Active</label>
            </div>

            <div class="radio inline">
                <input type="radio" name="status" value="Inactive" id="radio-5">
                <label for="radio-4">Inactive</label>
            </div>
        </div>
    </div>
    <!-- /.card-body -->

    <div class="card-footer ">
        <button type="submit " id="submit" class=" btn btn-primary ">Submit</button>
    </div>

</form>